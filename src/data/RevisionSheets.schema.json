{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "patternProperties": {
    "[A-Za-z0-9]": {
      "type": "object",
      "patternProperties": {
        "[A-Za-z0-9]": {
          "type": "object",
          "patternProperties": {
            "[A-Za-z0-9]": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "title": {
                    "type": "string"
                  },
                  "paragraphs": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "type": {
                          "type": "string",
                          "enum": ["text", "list", "numbered"]
                        },
                        "lines": {
                          "type": "array",
                          "items": {
                            "type": "array",
                            "items": {
                              "type": "object",
                              "properties": {
                                "type": {
                                  "type": "string",
                                  "enum": [
                                    "normal",
                                    "highlighted",
                                    "defined",
                                    "link",
                                    "highlighted-defined",
                                    "highlighted-link"
                                  ],
                                  "default": "normal"
                                },
                                "contents": {
                                  "type": "string"
                                }
                              },
                              "allOf": [
                                {
                                  "if": {
                                    "properties": {
                                      "type": {
                                        "const": "highlighted"
                                      }
                                    }
                                  },
                                  "then": {
                                    "properties": {
                                      "color": {
                                        "type": "string",
                                        "enum": [
                                          "blue",
                                          "indigo",
                                          "purple",
                                          "pink",
                                          "red",
                                          "orange",
                                          "yellow",
                                          "green",
                                          "teal",
                                          "cyan"
                                        ]
                                      }
                                    }
                                  }
                                },
                                {
                                  "if": {
                                    "properties": {
                                      "type": {
                                        "const": "defined"
                                      }
                                    }
                                  },
                                  "then": {
                                    "properties": {
                                      "definition": {
                                        "type": "string"
                                      }
                                    }
                                  }
                                },
                                {
                                  "if": {
                                    "properties": {
                                      "type": {
                                        "const": "link"
                                      }
                                    }
                                  },
                                  "then": {
                                    "properties": {
                                      "target": {
                                        "type": "string"
                                      }
                                    }
                                  }
                                },
                                {
                                  "if": {
                                    "properties": {
                                      "type": {
                                        "const": "highlighted-defined"
                                      }
                                    }
                                  },
                                  "then": {
                                    "properties": {
                                      "color": {
                                        "type": "string",
                                        "enum": [
                                          "blue",
                                          "indigo",
                                          "purple",
                                          "pink",
                                          "red",
                                          "orange",
                                          "yellow",
                                          "green",
                                          "teal",
                                          "cyan"
                                        ]
                                      },
                                      "definition": {
                                        "type": "string"
                                      }
                                    }
                                  }
                                },
                                {
                                  "if": {
                                    "properties": {
                                      "type": {
                                        "const": "highlighted-link"
                                      }
                                    }
                                  },
                                  "then": {
                                    "properties": {
                                      "color": {
                                        "type": "string",
                                        "enum": [
                                          "blue",
                                          "indigo",
                                          "purple",
                                          "pink",
                                          "red",
                                          "orange",
                                          "yellow",
                                          "green",
                                          "teal",
                                          "cyan"
                                        ]
                                      },
                                      "target": {
                                        "type": "string"
                                      }
                                    }
                                  }
                                }
                              ]
                            }
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
