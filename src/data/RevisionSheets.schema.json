{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "subjects": {
      "type": "array",
      "required": [],
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "categories": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string"
                },
                "sheets": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "name": {
                        "type": "string"
                      },
                      "sections": {
                        "type": "array",
                        "items": {
                          "type": "object",
                          "properties": {
                            "title": {
                              "type": "string"
                            },
                            "paragraphs": {
                              "type": "array",
                              "items": {
                                "type": "object",
                                "properties": {
                                  "type": {
                                    "type": "string",
                                    "enum": ["text", "list", "numbered"]
                                  },
                                  "lines": {
                                    "type": "array",
                                    "items": {
                                      "type": "array",
                                      "items": {
                                        "type": "object",
                                        "properties": {
                                          "type": {
                                            "type": "string",
                                            "enum": [
                                              "normal",
                                              "highlighted",
                                              "defined"
                                            ]
                                          },
                                          "contents": {
                                            "type": "string"
                                          }
                                        },
                                        "if": {
                                          "properties": {
                                            "type": { "const": "highlighted" }
                                          }
                                        },
                                        "then": {
                                          "properties": {
                                            "color": {
                                              "type": "string"
                                            }
                                          }
                                        },
                                        "else": {
                                          "if": {
                                            "properties": {
                                              "type": { "const": "defined" }
                                            }
                                          },
                                          "then": {
                                            "properties": {
                                              "definition": {
                                                "type": "string"
                                              }
                                            }
                                          }
                                        }
                                      }
                                    }
                                  }
                                }
                              }
                            }
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
